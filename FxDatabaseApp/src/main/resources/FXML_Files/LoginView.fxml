<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="pane" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
	<children>
		<BorderPane prefHeight="400.0" prefWidth="600.0">
			<center>
				<VBox prefHeight="351.0" prefWidth="404.0" BorderPane.alignment="CENTER">
					<children>
						<HBox prefHeight="100.0" prefWidth="200.0">
							<children>
								<Label alignment="CENTER" contentDisplay="CENTER" prefHeight="58.0" prefWidth="356.0" style="-fx-font-weight: bold;" text="Login" textAlignment="CENTER">
									<font>
										<Font size="24.0" />
									</font>
								</Label>
							</children>
						</HBox>
						<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
							<children>
								<Label prefHeight="44.0" prefWidth="89.0" text="Benutzer" />
								<TextField fx:id="benutzerTf" promptText="Benutzer" />
							</children>
						</HBox>
						<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
							<children>
								<Label prefHeight="52.0" prefWidth="89.0" text="Passwort" />
                        <PasswordField fx:id="passwortTf" promptText="Passwort" />
							</children>
						</HBox>
						<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
							<children>
								<Button fx:id="resetBtn" mnemonicParsing="false" onAction="#reset" prefHeight="43.0" prefWidth="124.0" text="Reset">
									<HBox.margin>
										<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
									</HBox.margin>
								</Button>
								<Button fx:id="loginBtn" mnemonicParsing="false" onAction="#login" prefHeight="43.0" prefWidth="124.0" text="Login">
									<HBox.margin>
										<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
									</HBox.margin>
								</Button>
							</children>
						</HBox>
					</children>
				</VBox>
			</center>
			<right>
				<ImageView fitHeight="300.0" fitWidth="132.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
					<image>
						<Image url="Pics/Guitar.png" />
					</image>
				</ImageView>
			</right>
			<bottom>
				<HBox prefHeight="36.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
			</bottom>
			<left>
				<ImageView fitHeight="300.0" fitWidth="132.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
					<image>
						<Image url="Pics/Guitar.png" />
					</image>
				</ImageView>
			</left>
         <top>
            <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
      				<Label alignment="CENTER" contentDisplay="CENTER" prefHeight="101.0" prefWidth="600.0" text="Meine erste Datenbank-App mit FX">
      					<font>
      						<Font name="System Bold Italic" size="24.0" />
      					</font>
      				</Label>
                  <Button fx:id="closeBtn" mnemonicParsing="false" onAction="#closeWindow" prefHeight="15.0" prefWidth="15.0" style="-fx-background-color: transparent;" text="X">
                     <font>
                        <Font size="14.0" />
                     </font></Button>
               </children>
            </HBox>
         </top>
		</BorderPane>
	</children>
</AnchorPane>
